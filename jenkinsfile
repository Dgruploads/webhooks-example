pipeline {
	agent any
	stages {
		stage ("1. 1. Install docker package") {
			steps {
				sh "yum install docker -y"
			}
		}

		stage ("2. Start the docker service.") {
			steps {
				sh "service docker start"
			}
		}

		stage ("3. Build the image") {
			steps {
				sh "docker build -t declarative-pipeline-image-feature-branch /home/ec2-user/"
			}
		}

		stage ("4. Run the container") {
			steps {
				sh "docker run -dit -p 9191:80 --name declarative-pipeline-container-feature-branch declarative-pipeline-image-feature-branch"
			}
		}

		stage ("5. Tag the container") {
			steps {
				sh "docker tag declarative-pipeline-image-feature-branch dgruploads/declarative-pipeline-image-feature-branch"
			}
		}

		stage ("6. login to the docker hub") {
			steps {
				sh "docker login -u dgruploads -p 9886360651Dd"
			}
		}

		stage ("7. Push the image to docker hub") {
			steps {
				sh "docker push dgruploads/declarative-pipeline-image-feature-branch"
			}
		}
		
		stage ("8. Pull the image jenkins") {
			steps {
				sh "docker pull jenkins"
				sh "docker pull wordpress"
			}
		}
	}
}
